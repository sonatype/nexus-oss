<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.sonatype.nexus.plugin</groupId>
    <artifactId>nexus-enterprise-plugins</artifactId>
    <version>2.1-SNAPSHOT</version>
  </parent>

  <artifactId>nexus-maven-site-plugin</artifactId>
  <packaging>nexus-plugin</packaging>

  <name>Nexus Professional Plugin :: Maven Site Plugin</name>
  <description>Adds a repository type for deploying maven sites.</description>
  <url/>

  <dependencies>

    <!-- Because we enforce license -->
    <dependency>
      <groupId>com.sonatype.nexus.edition</groupId>
      <artifactId>nexus-professional-edition</artifactId>
    </dependency>

    <!-- This is a plugin -->
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-api</artifactId>
    </dependency>

    <!-- AllInOne for UTs -->
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-test-api</artifactId>
    </dependency>

    <!-- AllInOne for ITs -->
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-test-harness-launcher</artifactId>
    </dependency>

  </dependencies>

  <build>
    <plugins>

      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>app-lifecycle-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.plexus</groupId>
        <artifactId>plexus-component-metadata</artifactId>
      </plugin>
      <plugin>
        <groupId>org.sonatype.nexus.plugins</groupId>
        <artifactId>nexus-test-environment-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-invoker-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>yuicompressor-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>aggregate</goal>
            </goals>
            <configuration>
              <output>${project.build.directory}/classes/static/js/nexus-maven-site-plugin-all.js</output>
              <nosuffix>true</nosuffix>
              <nomunge>true</nomunge>
              <jswarn>false</jswarn>
              <insertNewLine>true</insertNewLine>
              <disableOptimizations>true</disableOptimizations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>skip-test-harness-tests</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-failsafe-plugin</artifactId>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-test-environment-maven-plugin</artifactId>
            <configuration>
              <testSkip>true</testSkip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>withTests</id>
      <activation>
        <property>
          <name>!quick</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.sonatype.nexus</groupId>
          <artifactId>nexus-app</artifactId>
          <classifier>tests</classifier>
        </dependency>
        <dependency>
          <groupId>org.sonatype.nexus</groupId>
          <artifactId>nexus-proxy</artifactId>
          <classifier>tests</classifier>
        </dependency>
        <dependency>
          <groupId>org.sonatype.nexus</groupId>
          <artifactId>nexus-configuration</artifactId>
          <classifier>tests</classifier>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>

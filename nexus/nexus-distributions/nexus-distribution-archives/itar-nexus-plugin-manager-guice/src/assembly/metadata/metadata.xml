<?xml version="1.0" encoding="UTF-8"?>

<metadata>

  <description>Nexus Plugin Manager (Guice) ITAR</description>

  <requires>
    <property>
      <name>appName</name>
    </property>
    <property>
      <name>runtimeDir</name>
    </property>
    <property>
    	<name>applicationDir</name>
    	<default>${runtimeDir}/runtime/apps/${appName}</default>
    	<optional>true</optional>
    </property>
    <property>
    	<name>libraryDir</name>
    	<default>${applicationDir}/lib</default>
    	<optional>true</optional>
    </property>    
  </requires>

</metadata>

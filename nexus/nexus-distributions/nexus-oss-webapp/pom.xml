<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>nexus-distributions</artifactId>
    <version>1.6.1-SNAPSHOT</version>
  </parent>

  <artifactId>nexus-oss-webapp</artifactId>
  <packaging>pom</packaging>

  <name>Nexus OSS Webapp Bundle</name>

  <properties>
    <assembly.directory>${project.build.directory}/assembly</assembly.directory>
  </properties>


  <dependencies>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>car-nexus-oss</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-webapp</artifactId>
      <version>${project.version}</version>
      <classifier>itar</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-indexer-lucene-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.runtime.itars</groupId>
      <artifactId>itar-plexus-jsw-app-booter</artifactId>
      <version>2.1.0-v0001</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-plugin-console-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>guice-nexus-shim</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-rrb-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>itar-plexus-container-guice</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.runtime.itars</groupId>
      <artifactId>itar-plexus-app-booter</artifactId>
      <version>2.1.0-v0001</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-oss-edition</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sonatype.runtime.itars</groupId>
      <artifactId>itar-work-dir</artifactId>
      <version>0.1.0</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.runtime.bars</groupId>
      <artifactId>bar-jsw</artifactId>
      <version>3.2.3-v0001</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins.ldap</groupId>
      <artifactId>nexus-ldap-realm-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>

<!--   

    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>itar-nexus-plugin-manager-guice</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
-->
  </dependencies>


  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${assembly.directory}</outputDirectory>
              <resources>
                <resource>
                  <directory>src/assembly</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>maven-runtime-assembler-plugin</artifactId>
        <version>0.1.3</version>
        <configuration>
          <formats>
            <format>zip</format>
            <format>tar.gz</format>
          </formats>
        </configuration>
        <executions>
          <execution>
            <id>fragments</id>
            <phase>process-resources</phase>
            <goals>
              <goal>attach-descriptor</goal>
            </goals>
            <configuration>
              <assemblyDescriptor>${assembly.directory}/fragments.xml</assemblyDescriptor>
            </configuration>
          </execution>
          <execution>
            <id>guice-jsw-minimal</id>
            <phase>process-resources</phase>
            <goals>
              <goal>attach-descriptor</goal>
            </goals>
            <configuration>
              <assemblyDescriptor>${assembly.directory}/runtime-guice-jsw-minimal.xml</assemblyDescriptor>
            </configuration>
          </execution>
          <execution>
            <id>guice-jsw-oss</id>
            <phase>process-resources</phase>
            <goals>
              <goal>assemble</goal>
            </goals>
            <configuration>
              <assemblyDescriptor>${assembly.directory}/runtime-guice-jsw-oss.xml</assemblyDescriptor>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>

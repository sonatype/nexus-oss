    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-it-helper-plugin</artifactId>
      <version>${project.version}</version>
    </dependency>
-->
    <!-- To redirect j.u.Preferences -->
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-it-helper-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>cp</classifier>
      <type>jar</type>
    </dependency>

  </dependencies>
</project>

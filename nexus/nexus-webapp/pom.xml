      <plugin>
        <groupId>com.github.mcheely</groupId>
        <artifactId>requirejs-maven-plugin</artifactId>
        <version>1.0.4</version>
        <executions>
          <execution>
            <goals>
              <goal>optimize</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <configFile>
            ${basedir}/src/main/config/buildconfig.js
          </configFile>
          <filterConfig>
            true
          </filterConfig>
          <skip>
            false
          </skip>
        </configuration>
      </plugin>
      -->
    </plugins>
  </build>

</project>

<assembly>
  <id>cli</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>jar</format>
  </formats>
  <containerDescriptorHandlers>
    <containerDescriptorHandler>
      <handlerName>plexus-fixed</handlerName>
    </containerDescriptorHandler>
  </containerDescriptorHandlers>
  <!--
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  -->
  <dependencySets>
    <dependencySet>
      <scope>runtime</scope>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <excludes>
        <exclude>*:plexus-component-api</exclude>
        <exclude>*:classworlds</exclude>
        <exclude>*:junit</exclude>
        <exclude>*:xml-apis</exclude>
        <!-- archetypeng -->
        <exclude>*:archetypeng-common</exclude>
        <!-- <exclude>aspectj:aspectjrt</exclude> -->
        <exclude>*:commons-collections</exclude>
        <exclude>*:commons-io</exclude>
        <exclude>*:dom4j</exclude>
        <exclude>*:jdom</exclude>
        <exclude>*:jchardet</exclude>
        <exclude>*:maven-artifact</exclude>
        <exclude>*:doxia-sink-api</exclude>
        <exclude>*:maven-core</exclude>
        <exclude>*:maven-lifecycle</exclude>
        <exclude>*:maven-profile</exclude>
        <exclude>*:maven-project</exclude>
        <exclude>*:maven-reporting-api</exclude>
        <exclude>*:plexus-interactivity-api</exclude>
        <exclude>*:plexus-velocity</exclude>
        <exclude>*:oro</exclude>
        <exclude>*:velocity</exclude>
      </excludes>		    
    </dependencySet>
  </dependencySets>
</assembly>

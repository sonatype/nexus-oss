<?xml version="1.0" encoding="UTF-8"?>
<assemblies>

  <id>fragments</id>

  <assembly>

	<id>fragment-nexus-oss-minimal</id>

    <description>Nexus OSS Minimal Fragment</description>

    <properties>
      <appName>nexus</appName>
      <appVersion>${project.version}</appVersion>
      <runtimeDir>${appName}-oss-${appVersion}</runtimeDir>
      <workDir>sonatype-work</workDir>
    </properties>
    
    <cars>
      <car>
        <groupId>org.sonatype.nexus</groupId>
        <artifactId>car-nexus-oss</artifactId>
        <version>${project.version}</version>
        <type>zip</type>
      </car>
    </cars>

    <itars>
      <itar>
        <groupId>org.sonatype.nexus</groupId>
        <artifactId>itar-nexus-oss</artifactId>
        <version>${project.version}</version>
        <type>zip</type>
      </itar>
      <itar>
        <groupId>org.sonatype.runtime.itars</groupId>
        <artifactId>itar-plexus-app-booter</artifactId>
        <version>2.1.0-v0001-SNAPSHOT</version>
        <type>zip</type>
      </itar>
      <itar>
        <groupId>org.sonatype.runtime.itars</groupId>
        <artifactId>itar-plexus-jsw-app-booter</artifactId>
        <version>2.1.0-v0001-SNAPSHOT</version>
        <type>zip</type>
      </itar>
      <itar>
        <groupId>org.sonatype.nexus.plugins</groupId>
        <artifactId>nexus-plugin-console-plugin</artifactId>
        <version>${project.version}</version>
        <classifier>bundle</classifier>
        <type>zip</type>
		<virtual>true</virtual>
		<unpack>true</unpack>
        <outputDirectory>${runtimeDir}/runtime/apps/${appName}/plugin-repository</outputDirectory>        
      </itar>      
      <itar>
        <groupId>org.sonatype.runtime.itars</groupId>
        <artifactId>itar-work-dir</artifactId>
        <version>0.1.0-SNAPSHOT</version>
        <type>zip</type>
      </itar>
    </itars>    
    
  </assembly>
  
  <assembly>

	<id>fragment-nexus-guice</id>

    <description>Nexus Guice Fragment</description>

    <itars>
      <itar>
        <groupId>org.sonatype.nexus</groupId>
        <artifactId>itar-plexus-container-guice</artifactId>
        <version>${project.version}</version>
        <type>zip</type>
      </itar>
      <itar>
        <groupId>org.sonatype.nexus</groupId>
        <artifactId>itar-nexus-plugin-manager-guice</artifactId>
        <version>${project.version}</version>
        <type>zip</type>
      </itar>
    </itars>

  </assembly>
  
  <assembly>

	<id>fragment-nexus-plexus</id>

    <description>Nexus Plexus Fragment</description>

    <itars>
      <itar>
        <groupId>org.sonatype.runtime.itars</groupId>
        <artifactId>itar-plexus-container-default</artifactId>
        <version>1.2.1.4-v0001-SNAPSHOT</version>
        <type>zip</type>
      </itar>
      <itar>
        <groupId>org.sonatype.nexus</groupId>
        <artifactId>itar-nexus-plugin-manager-plexus</artifactId>
        <version>${project.version}</version>
        <type>zip</type>
      </itar>
    </itars>

  </assembly>  
  
  <assembly>

	<id>fragment-nexus-oss-plugins</id>

    <description>Nexus OSS Plugins Fragment</description>

    <itars>
      <itar>
        <groupId>org.sonatype.nexus</groupId>
        <artifactId>nexus-indexer-lucene-plugin</artifactId>
        <version>${project.version}</version>
        <classifier>bundle</classifier>
        <type>zip</type>
		<virtual>true</virtual>
		<unpack>true</unpack>
        <outputDirectory>${runtimeDir}/runtime/apps/${appName}/plugin-repository</outputDirectory>        
      </itar>
      <itar>
        <groupId>org.sonatype.nexus.plugins</groupId>
        <artifactId>nexus-rrb-plugin</artifactId>
        <version>${project.version}</version>
        <classifier>bundle</classifier>
        <type>zip</type>
		<virtual>true</virtual>
		<unpack>true</unpack>
        <outputDirectory>${runtimeDir}/runtime/apps/${appName}/plugin-repository</outputDirectory>        
      </itar>
      <itar>
        <groupId>org.sonatype.nexus.plugins.ldap</groupId>
        <artifactId>nexus-ldap-realm-plugin</artifactId>
        <version>${project.version}</version>
        <classifier>bundle</classifier>
        <type>zip</type>
		<virtual>true</virtual>
		<unpack>true</unpack>
        <outputDirectory>${runtimeDir}/runtime/apps/${appName}/plugin-repository</outputDirectory>        
      </itar>
    </itars>

  </assembly>  

</assemblies>

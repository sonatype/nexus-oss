<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>components</artifactId>
    <version>2.5.0-SNAPSHOT</version>
  </parent>

  <artifactId>nexus-plugin-test-api</artifactId>
  <name>${project.groupId}:${project.artifactId}</name>

  <dependencies>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-test-common</artifactId>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-web-utils</artifactId>
      <scope>runtime</scope>
    </dependency>

    <!--
    NOTE: Can *NOT* include this dependency here, as it introduces a bunch of nasty dependency cycles, since it depends on some plugins.
    -->
    <!--<dependency>-->
      <!--<groupId>org.sonatype.nexus</groupId>-->
      <!--<artifactId>nexus-test-harness-launcher</artifactId>-->
    <!--</dependency>-->

    <dependency>
      <groupId>org.sonatype.http-testing-harness</groupId>
      <artifactId>server-provider</artifactId>
    </dependency>

    <dependency>
      <groupId>org.sonatype.plexus</groupId>
      <artifactId>plexus-jetty-testsuite</artifactId>
    </dependency>

    <!--
    FIXME: These 'tests' classifier artifacts mess up mavens dependency resolution and causes IDEA to build incorrect module dependency defs
    HACK: exclude all transitive deps using * globs
    -->

    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-core</artifactId>
      <classifier>tests</classifier>
      <exclusions>
        <!--<exclusion>-->
          <!--<groupId>org.sonatype.nexus</groupId>-->
          <!--<artifactId>nexus-oss-edition</artifactId>-->
        <!--</exclusion>-->
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-security-realms</artifactId>
      <classifier>tests</classifier>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!--
      This module serves only to group dependencies for plugins, it has no classes, but we need to generate a jar for it regardless.
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <skipIfEmpty>false</skipIfEmpty>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus.plugins</groupId>
    <artifactId>nexus-plugins-security</artifactId>
    <version>3.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>nexus-ldap-plugin</artifactId>
  <name>${project.groupId}:${project.artifactId}</name>
  <packaging>bundle</packaging>

  <properties>
    <pluginDescription>Adds an LDAP realm to Nexus.</pluginDescription>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-api</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-ldap-model</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.sonatype.nexus.plugins</groupId>
          <artifactId>nexus-ssl-model</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.sonatype.nexus.plugins</groupId>
          <artifactId>nexus-restlet1x-model</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-restlet1x-plugin</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-ssl-plugin</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-capabilities-plugin</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-groovy-plugin</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-rapture-plugin</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-extdirect-plugin</artifactId>
      <scope>provided</scope>
    </dependency>

    <!--
    FIXME: If this is promoted to DM in nexus/pom.xml, then tests will start to fail with JCE exceptions.
    -->
    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcprov-jdk15on</artifactId>
      <version>1.48</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-testsupport</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.sonatype.plexus</groupId>
      <artifactId>plexus-ldap-testsuite</artifactId>
      <scope>test</scope>
      <!--
      FIXME: Sort out this exclusion, if it makes sense move up to DM
      -->
      <exclusions>
        <exclusion>
          <groupId>org.apache.directory.shared</groupId>
          <artifactId>shared-bouncycastle-reduced</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <compilerId>groovy-eclipse-compiler</compilerId>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.modello</groupId>
        <artifactId>modello-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>oss-config</id>
            <goals>
              <goal>java</goal>
              <goal>xsd</goal>
              <goal>xpp3-reader</goal>
              <goal>xpp3-writer</goal>
            </goals>
            <configuration>
              <version>2.8.0</version>
              <packagedVersions>
                <packagedVersion>1.0.1</packagedVersion>
              </packagedVersions>
              <models>
                <model>src/main/mdo/ldap-oss.xml</model>
              </models>
            </configuration>
          </execution>
          <execution>
            <id>pro-config</id>
            <goals>
              <goal>java</goal>
              <goal>xsd</goal>
              <goal>xpp3-reader</goal>
              <goal>xpp3-writer</goal>
            </goals>
            <configuration>
              <version>2.8.0</version>
              <packageWithVersion>false</packageWithVersion>
              <packagedVersions>
                <packagedVersion>2.0.1</packagedVersion>
              </packagedVersions>
              <models>
                <model>src/main/mdo/ldap-pro.xml</model>
              </models>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>modello-plugin-upgrade</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>upgrade</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <version>2.8.0</version>
              <packageWithVersion>false</packageWithVersion>
              <packagedVersions>
                <packagedVersion>2.0.1</packagedVersion>
              </packagedVersions>
              <models>
                <model>src/main/mdo/ldap-pro.xml</model>
              </models>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

</project>
